<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>
<br>
<h1>cart詳細ページ</h1>
<h2>　　　カートに追加された商品</h2>
<br>

<br>
<br>
<table>
	<tr>
							<th>商品名</th>
						    <th>アーティスト</th>
						    <th>価格</th>
						    <th>数量</th>
						    <th>小計</th>
						    <th></th>
	</tr>
		<% @cart_items.each do |cart_item| %>
		<tr>
			<td><font size="4"><%= cart_item.item.title %></font></td>
			<td><font size="4"><%= cart_item.item.artist.name %></font></td>
			<td><font size="4"><%= (cart_item.item.price).to_i %>円</font></td>
			<td><font size="4"><%= cart_item.quantity %></font></td>
			<td><font size="4"><%= (cart_item.total_price).to_i %>円</font></td>
			<td><%= button_to '削除', user_items_cart_items(cart_item.id), method: :delete, data: {confirm: 'カートから削除してよろしいですか？'}%></td>

		</tr>
		<% end %>

		<tr>
			<td colspan="5"><font size="5">総計：<%= @price %>円</font></td>
		</tr>
</table>


<%= link_to "ショッピングを続ける", user_items_path %>

<br>
<%= button_to 'カートを空にする', user_cart_path(@cart), method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: 'fbtn' %>

