

<div class="container">
	<%= form_for @genre, url: admin_genres_path do |f| %>
		<div class="card">
			<div class="card-header">
				<h2>ジャンル情報</h2>
			</div>
			<div class="card-body">
				<%= render 'form', f: f %>

				<div class="float-right">
					<%= f.submit '登録', class: 'btn btn-primary mr-2'%>
					<%= link_to 'キャンセル', admin_genres_path, class: 'btn btn-light'%>
				</div>
			</div>
		</div>
	<% end %>
</div>