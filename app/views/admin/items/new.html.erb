<div class="container">

	<% if @item.errors.any? %>
	  <div id="error_explanation" class="alert alert-danger">
	    <ul>
	      <% @item.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>


	<%= form_for @item, url: admin_items_path do |f| %>
		<div class="card">
			<div class="card-header">
				<h2>商品情報</h2>
			</div>
			<div class="card-body">
				<%= render 'form', f: f %>
				<div class="float-right">
					<%= f.submit '登録', class: 'btn btn-primary mr-2'%>
					<%= link_to 'キャンセル', admin_items_path, class: 'btn btn-light'%>
				</div>
			</div>
		</div>
	<% end %>
</div>


