<div class="container"> 
  <h2>ユーザー情報</h2>

  <%= form_for @user, url:admin_user_path(@user) do |f| %>

    <div class="field">
      <%= f.label :氏 %><br />
      <%= f.text_field :first_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :last_name, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :フリガナ %><br />
      <%= f.text_field :first_name_furigana, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :フリガナ %><br />
      <%= f.text_field :last_name_furigana, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :郵便番号 %><br />
      <%= f.text_field :zip, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :住所 %><br />
      <%= f.text_field :address, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :電話番号 %><br />
      <%= f.text_field :tel, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <%= f.submit '更新', class: 'btn btn-primary mr-2' %>
	<%= link_to 'キャンセル', admin_artists_path, class: 'btn btn-light' %>
  <% end %>
</div>
