
  <div class="form-group row">
    <%= f.label :name, '氏名', class: "col-sm-3 col-form-label text-right required" %>
    
    <%= f.text_field :name, class: 'form-control, col-sm-4', placeholder: '氏名' %>
      
    
  </div>
  <div class="form-group row">
    <%= f.label :email, class: "col-sm-3 col-form-label text-right required" %>
    <%= f.email_field :email, class: 'form-control, col-sm-4' %>
  </div>
  <div class="form-group row">
    <% unless f.object.persisted? %>
      <%= f.label :password, class: "col-sm-3 col-form-label text-right required" %>
      <% else %>
      <%= f.label :password, class: "col-sm-3 col-form-label text-right" %>
    <% end %>
      <%= f.password_field :password, class: 'form-control, col-sm-4', placeholder: "#{'変更する場合のみ入力してください' if f.object.persisted?}" %>
  </div>
  <div class="form-group row">
    <% unless f.object.persisted? %>
      <%= f.label :password_confirmation, class: "col-sm-3 col-form-label text-right required" %>
      <% else %>
      <%= f.label :password_confirmation, class: "col-sm-3 col-form-label text-right" %>
    <% end %>
      <%= f.password_field :password_confirmation, class: 'form-control, col-sm-4' %>
  </div>
